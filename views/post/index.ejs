<div class="container container-table" >
  <div class="row vertical-center-row">
    <%_.each(post, function (post) { %>
    <a href="/post/show/<%=post.id%>" style="color: inherit;">
      <div class="col-sm-6"  style="width: 15em; padding-top: 5em">
        <div class="card-deck" style="width: 20rem;">
          <div class="card-block" style="background-color: #eeeeee; border-color: #999999; border: solid; border-width: 1px;">
            <img class="card-img-top" src="../images/image.png" alt="Card image cap" height="198px" width="198px">
            <div class="card-block">
              <h4 class="card-title"><%= post.post_title%></h4>
              <p class="card-text"><%= post.post_description%></p>
              <p class="card-text"><%= post.post_category%></p>
            </div>
          </div>
        </div>
      </div>
    </a>
    <%}) %>
  </div>
</div>
